
<% if @book.errors.any? %>
<div class="alert alert-danger" role="alert">
  <h4 class="alert-heading"><%= pluralize(@book.errors.count, "error") %> prohibited this todo from being saved:!</h4>
    <ul>
        <% @book.errors.each do |error| %>
          <li class="mb-0"><%= error.full_message %></li>
        <% end %>
      </ul>
    <hr>
  <p class="mb-0">Please check and give proper inputs.</p>
</div>
    
  <% end %>

<%= form_with(model: @book, url: book_index_path) do |b| %>
<div class="mb-3 row">
    <%= b.label :name, "Name",{class:"form-label"} %>
    <%= b.text_field :name, {class:"form-control", placeholder:"Enter name...", required: "true"} %>
</div>

<div class="mb-3 row">
    <%= b.label :descr, "Description",{class:"form-label"} %>
    <%= b.text_area :descr, {class:"form-control", placeholder:"Enter Book description...", required: "true"} %>
</div>


<div class="mb-3 row">
    <%= b.label :author_id, "Author id",{class:"form-label"} %>
    <%= b.text_field :author_id, {class:"form-control", placeholder:"Enter Author id...",type:"number", required: "true"} %>
</div>

<div class="mb-3 row">
<center>
    <%=b.submit(class:"btn btn-primary mb-3")%>
    </center>
</div>

<% end %>